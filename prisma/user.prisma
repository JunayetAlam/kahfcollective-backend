model User {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  email       String       @unique
  phoneNumber String       @unique
  password    String
  role        UserRoleEnum @default(USER)

  gender  GenderEnum
  address String

  // education
  currentClass String
  roll         Int
  subject      String?

  status UserStatus @default(ACTIVE)

  introduction String

  profile   String?
  otp       String?
  otpExpiry DateTime?

  isUserVerified                Boolean   @default(false)
  expireIn                      DateTime?
  isEmailVerified               Boolean   @default(false)
  isDeleted                     Boolean?  @default(false)
  emailVerificationToken        String?
  emailVerificationTokenExpires DateTime?

  payments        Payment[]
  content         Content[]
  posts           Post[]
  replies         Reply[]
  quizAnswers     QuizAnswers[]
  courses         Course[]
  coursesContents CourseContents[]
  quizzes         Quiz[]
  userGroups      UserGroup[]
  reacts          React[]
  completeCourses CompleteCourse[]
  enrollCourses   EnrollCourse[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courseQuestionAnswers QuestionAnswer[] @relation("UserToAnswer")
  courseQuestion        Question[]       @relation("InstructorToQuestion")

  @@map("users")
}

enum UserRoleEnum {
  USER
  CREATED_USER
  INSTRUCTOR
  SUPERADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}
